<% form_for @page do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :permalink %><br />
    <%= f.text_field :permalink %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content, :cols => 75, :rows => 25, :class => 'elastic' %>
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>
