		<tr><td>En contra</td> <td> <%= @proposition.identity_verified_no_count %></td> <td><%= @proposition.identity_verified_no_percent %>%</td></tr>
		<tr><td>Total</td> <td> <%= @proposition.identity_verified_votes_count %></td> <td>100%</td></tr>
	</table>
</div>
<% end %>

<% if @proposition.senators_votes_count > 0 %>
<h2>Votos del Senado</h2>
<div class="votes_details shadow rounded">
