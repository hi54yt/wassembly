<% title "Ratings" %>

<table>
  <tr>
    <th>Value</th>
    <th>Rateable</th>
    <th>Rateable Type</th>
    <th>Rater</th>
  </tr>
  <% for rating in @ratings %>
    <tr class="<%= cycle('odd','even') %>">
      <td><%=h rating.value %></td>
      <td><%=h rating.rateable_id %></td>
      <td><%=h rating.rateable_type %></td>
      <td><%=h rating.rater_id %></td>
      <td><%= link_to "Show", rating %></td>
      <td><%= link_to "Edit", edit_rating_path(rating) %></td>
      <td><%= link_to "Destroy", rating, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<%= will_paginate @ratings %>