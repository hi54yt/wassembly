<% title "Usuarios" %>
<div id="user_list">
	<table>
	  <thead>
	  <tr>
	    <th>Username</th>
	    <th>Email</th>
		<th>Número de logins</th>
		<th>Logins fallidos</th>
		<th>Última vez logeado</th>
		<th>Last login IP</th>
		<th>Current login IP</th>
	  </tr>
	  </thead>
	  <% for user in @users %>
	    <tr class="<%= cycle('even','odd') %>">
	      <td><%=link_to h(user.username), user %></td>
	      <td><%=h user.email %></td>
		  <td><%=h user.login_count %></td>
		  <td><%=h user.failed_login_count %></td>
		  <td><%=h user.last_login_at %></td>
		  <td><%=h user.last_login_ip %></td>
	      <td><%= link_to "Edit", edit_user_path(user) , :class=> 'btn blue' %></td>
	      <td><%= link_to "Destroy", user, :confirm => 'Are you sure?', :method => :delete , :class=> 'btn red'%></td>
	    </tr>
	  <% end %>
	</table>
	<%= will_paginate @users %>
</div>


